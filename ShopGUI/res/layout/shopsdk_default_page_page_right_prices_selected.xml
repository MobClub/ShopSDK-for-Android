<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="15dp"
		android:layout_marginRight="15dp"
		android:padding="@dimen/shopsdk_default_smaller_padding"
		android:background="@color/grey_space"
		android:orientation="horizontal">

		<EditText
			android:id="@+id/minEdPrices"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="30dp"
			android:inputType="number"
			android:background="@drawable/shopsdk_default_rectangle_white_bg"
			android:lines="1"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="20dp"
			android:layout_marginRight="20dp"
			android:text="-"
			android:textColor="@color/black"
			android:textSize="17sp"/>

		<EditText
			android:id="@+id/highEdPrices"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="30dp"
			android:inputType="number"
			android:background="@drawable/shopsdk_default_rectangle_white_bg"
			android:lines="1"/>

	</LinearLayout>
</LinearLayout>