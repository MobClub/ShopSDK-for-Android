<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<com.mob.shop.gui.themes.defaultt.components.TitleView
		android:id="@+id/shopsdk_refund_detail_titleview"
		android:layout_width="match_parent"
		android:layout_height="48dp"/>
	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#F7F7F7"
		android:layout_below="@+id/shopsdk_refund_detail_titleview">
		<LinearLayout
			android:id="@+id/shopsdk_refund_detail_container_ll"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="75dp"
				android:paddingLeft="@dimen/shopsdk_default_refund_detail_content_padding_left_right"
				android:paddingRight="@dimen/shopsdk_default_refund_detail_content_padding_left_right"
				android:paddingTop="@dimen/shopsdk_default_refund_detail_content_padding_top_bottom"
				android:paddingBottom="@dimen/shopsdk_default_refund_detail_content_padding_top_bottom"
				android:background="#ffffff"
				android:orientation="vertical">
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="0dp"
					android:layout_weight="1"
					android:gravity="center_vertical"
					android:orientation="horizontal">
					<TextView
						android:layout_width="@dimen/shopsdk_default_refund_detail_common_label_width"
						android:layout_height="wrap_content"
						android:textSize="@dimen/shopsdk_default_refund_detail_content_text_size"
						android:textColor="#000000"
						android:text="@string/shopsdk_default_refund_detail_progress"/>
					<TextView
						android:id="@+id/shopsdk_refund_detail_progress_tv"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="@dimen/shopsdk_default_refund_detail_common_tv_margin_left"
						android:textSize="@dimen/shopsdk_default_refund_detail_content_text_size"
						android:textColor="#F9725A"
						tools:text="发起申请"/>
				</LinearLayout>
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="0dp"
					android:layout_weight="1"
					android:layout_marginTop="10dp"
					android:gravity="center_vertical"
					android:orientation="horizontal">
					<TextView
						android:layout_width="@dimen/shopsdk_default_refund_detail_common_label_width"
						android:layout_height="wrap_content"
						android:textSize="@dimen/shopsdk_default_refund_detail_content_text_size"
						android:textColor="#000000"
						android:text="@string/shopsdk_default_refund_detail_order_id"/>
					<TextView
						android:id="@+id/shopsdk_refund_detail_order_id"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="@dimen/shopsdk_default_refund_detail_common_tv_margin_left"
						android:textSize="@dimen/shopsdk_default_refund_detail_content_text_size"
						android:textColor="#000000"
						tools:text="242352341"/>
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingRight="@dimen/shopsdk_default_refund_detail_content_padding_left_right"
		android:paddingLeft="@dimen/shopsdk_default_refund_detail_content_padding_left_right"
		android:paddingTop="10dp"
		android:paddingBottom="10dp"
		android:layout_alignParentBottom="true"
		android:gravity="center_vertical"
		android:background="#EAC0C0C0">
		<TextView
			android:id="@+id/shopsdk_refund_detail_order_detail_tv"
			android:layout_width="70dp"
			android:layout_height="25dp"
			android:gravity="center"
			android:textColor="#999999"
			android:textSize="13sp"
			android:layout_alignParentLeft="true"
			android:text="@string/shopsdk_default_refund_detail_order_detail"
			android:clickable="true"
			android:background="@drawable/shopsdk_default_corner_btn_grey_stroke"/>
		<TextView
			android:id="@+id/shopsdk_refund_detail_custom_service_tv"
			android:layout_width="70dp"
			android:layout_height="25dp"
			android:gravity="center"
			android:textColor="#F9725A"
			android:textSize="13sp"
			android:layout_alignParentRight="true"
			android:text="@string/shopsdk_default_refund_detail_custom_service"
			android:clickable="true"
			android:background="@drawable/shopsdk_default_corner_btn_orange_stroke"/>
	</RelativeLayout>
</RelativeLayout>