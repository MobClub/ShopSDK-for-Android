<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/shopsdk_default_common_padding"
        android:paddingLeft="@dimen/shopsdk_default_small_big_padding"
        android:paddingRight="@dimen/shopsdk_default_small_big_padding"
        android:paddingTop="@dimen/shopsdk_default_common_padding">


        <com.mob.tools.gui.AsyncImageView
            android:id="@+id/iv"
            android:layout_width="@dimen/shopsdk_default_cartimg_height"
            android:layout_height="@dimen/shopsdk_default_cartimg_height"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/checkBox"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/shopsdk_default_cartimg_height"
            android:layout_alignBottom="@id/iv"
            android:layout_alignTop="@id/iv"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/shopsdk_default_common_padding"
            android:layout_toRightOf="@+id/iv"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:lines="2"
                    android:textColor="@color/black"
                    android:textSize="@dimen/shopsdk_default_small_txt" />


                <TextView
                    android:id="@+id/tvTCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:visibility="invisible" />
            </LinearLayout>


            <TextView
                android:id="@+id/tvAttribute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll"
                android:layout_marginTop="@dimen/shopsdk_default_small_padding"
                android:singleLine="true"
                android:textColor="@color/unselect_tab"
                android:textSize="@dimen/shopsdk_default_smaller_txt" />


            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/shopsdk_default_smaller_padding"
                android:textColor="@color/orange_price"
                android:textSize="@dimen/shopsdk_default_big_txt" />

            <TextView
                android:id="@+id/tvCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tvAttribute"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/shopsdk_default_common_padding"
                android:singleLine="true"
                android:textColor="@color/unselect_tab"
                android:textSize="@dimen/shopsdk_default_smaller_txt" />

            <TextView
                android:id="@+id/tvRefund"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tvPrice"
                android:layout_alignParentRight="true"
                android:background="@drawable/shopsdk_default_round_white_bg"
                android:gravity="center"
                android:minWidth="38dp"
                android:paddingBottom="3dp"
                android:paddingLeft="@dimen/shopsdk_default_smaller_padding"
                android:paddingRight="@dimen/shopsdk_default_smaller_padding"
                android:paddingTop="3dp"
                android:text="@string/shopsdk_default_refund"
                android:textColor="@color/unselect_tab"
                android:textSize="@dimen/shopsdk_default_least_txt"
                android:visibility="gone" />

        </RelativeLayout>
    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/grey_line" />

</RelativeLayout>
