<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/grey_space"
              android:orientation="vertical">

	<com.mob.shop.gui.themes.defaultt.components.TitleView
		android:id="@+id/titleView"
		android:layout_width="match_parent"
		android:layout_height="48dp"/>

	<ListView
		android:id="@+id/listView"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:listSelector="#00000000"
		android:divider="@color/white"
		android:dividerHeight="0px"
		android:cacheColorHint="#00000000"
		android:scrollbars="none"
		android:layout_weight="1"/>

	<TextView
		android:id="@+id/tvAdd"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:background="@drawable/shopsdk_default_title_bg"
		android:textColor="@color/white"
		android:textSize="@dimen/shopsdk_default_small_big_txt"
		android:paddingBottom="@dimen/shopsdk_default_small_big_padding"
		android:paddingTop="@dimen/shopsdk_default_small_big_padding"
		android:text="@string/shopsdk_default_create_shippingaddress"/>
</LinearLayout>