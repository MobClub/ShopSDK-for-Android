<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="48dp"
		android:background="@drawable/shopsdk_default_title_bg">

		<ImageView
			android:id="@+id/ivBack"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_centerVertical="true"
			android:paddingLeft="15dp"
			android:paddingRight="15dp"
			android:src="@drawable/shopsdk_default_back"/>

		<ImageView
			android:id="@+id/ivSpace"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:paddingLeft="15dp"
			android:paddingRight="15dp"
			android:src="@drawable/shopsdk_default_back"
			android:visibility="invisible"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
			android:layout_toLeftOf="@id/ivSpace"
			android:layout_toRightOf="@id/ivBack"
			android:gravity="center_vertical"
			android:orientation="horizontal">

			<com.mob.tools.gui.AsyncImageView
				android:id="@+id/ivLogo"
				android:scaleType="centerCrop"
				android:layout_width="38dp"
				android:layout_height="38dp"/>

			<TextView
				android:id="@+id/tvName"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10dp"
				android:ellipsize="end"
				android:singleLine="true"
				android:textColor="@color/white"
				android:textSize="16sp"/>
		</LinearLayout>
	</RelativeLayout>

	<com.mob.shop.gui.themes.defaultt.components.AccessTabsView
		android:id="@+id/accessTabsView"
		android:layout_width="match_parent"
		android:layout_height="50dp"/>

	<com.mob.tools.gui.MobViewPager
		android:id="@+id/MobViewPage"
		android:layout_width="match_parent"
		android:layout_height="match_parent"/>
</LinearLayout>