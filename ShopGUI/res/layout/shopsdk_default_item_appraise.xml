<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="@dimen/shopsdk_default_big_padding"
              android:paddingRight="@dimen/shopsdk_default_big_padding"
              android:paddingTop="5dp"
              android:orientation="vertical">

	<RelativeLayout
		android:layout_width="wrap_content"
		android:gravity="center_vertical"
		android:layout_height="wrap_content">

		<TextView
			android:id="@+id/tvName"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:textColor="@color/black"
			android:textSize="12sp"/>

		<RatingBar
			android:id="@+id/ratingBar"
			style="@style/accessRatingBar"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:numStars="5"
			android:rating="3.5"
			android:isIndicator="false"
			android:layout_alignParentRight="true"/>
	</RelativeLayout>

	<TextView
		android:id="@+id/tvAccess"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textColor="@color/black"
		android:textSize="12sp"/>

	<com.mob.shop.gui.themes.defaultt.components.ExactGridView
		android:id="@+id/accessImgView"
		android:layout_width="match_parent"
		android:numColumns="4"
		android:listSelector="@color/transparent"
		android:layout_marginBottom="5dp"
		android:layout_marginLeft="-3dp"
		android:layout_height="wrap_content"/>

	<TextView
		android:id="@+id/tvAttr"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="10dp"
		android:textColor="#999999"
		android:textSize="12sp"/>
	<View
		android:layout_width="match_parent"
		android:layout_height="1px"
	    android:background="#e6e6e6"/>
</LinearLayout>