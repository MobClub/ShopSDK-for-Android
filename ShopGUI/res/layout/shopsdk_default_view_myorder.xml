<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:id="@+id/rlView"
                android:orientation="vertical"
	>

	<LinearLayout
		android:id="@+id/llProduct"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<RelativeLayout
			android:id="@+id/rlProduct"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/shopsdk_default_smaller_padding"
			android:background="@color/order_bg"
			android:paddingBottom="@dimen/shopsdk_default_common_padding"
			android:paddingLeft="@dimen/shopsdk_default_big_padding"
			android:paddingRight="@dimen/shopsdk_default_big_padding"
			android:paddingTop="@dimen/shopsdk_default_common_padding">

			<com.mob.tools.gui.AsyncImageView
				android:id="@+id/ivLogo"
				android:layout_width="@dimen/shopsdk_default_order_height"
				android:layout_height="@dimen/shopsdk_default_order_height"
				android:scaleType="centerCrop"
				android:layout_marginRight="@dimen/shopsdk_default_common_padding"/>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_toRightOf="@+id/ivLogo"
				android:orientation="horizontal">

				<TextView
					android:id="@+id/tvName"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:ellipsize="end"
					android:lines="2"
					android:text="【beatssolo3 wireless】Beats蓝牙无线 Solo3蓝牙无线 Wireless蓝牙无线 头戴式耳机 - 红色 MP162PA/A【行情 报价 价格 评测】"
					android:textColor="@color/black"
					android:textSize="@dimen/shopsdk_default_smaller_txt"/>

				<TextView
					android:id="@+id/tvMoney"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="@dimen/shopsdk_default_smaller_padding"
					android:text="￥1029"
					android:textColor="@color/black"
					android:textSize="@dimen/shopsdk_default_smaller_txt"/>
			</LinearLayout>


			<TextView
				android:id="@+id/tvAttribute"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_alignBottom="@+id/ivLogo"
				android:layout_toRightOf="@+id/ivLogo"
				android:ellipsize="end"
				android:singleLine="true"
				android:text="颜色：黑色"
				android:textColor="@color/unselect_tab"
				android:textSize="@dimen/shopsdk_default_smaller_txt"/>
			<TextView
				android:id="@+id/tvCount"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:textColor="@color/unselect_tab"
				android:textSize="@dimen/shopsdk_default_smaller_txt"
				android:layout_alignBottom="@+id/tvAttribute"/>
		</RelativeLayout>

	</LinearLayout>


	<TextView
		android:id="@+id/tvFreight"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_below="@+id/llProduct"
		android:layout_marginRight="@dimen/shopsdk_default_big_padding"
		android:layout_marginTop="@dimen/shopsdk_default_smaller_padding"
		android:text="@string/shopsdk_default_order_freight"
		android:textColor="@color/black"
		android:textSize="@dimen/shopsdk_default_smaller_txt"/>

	<TextView
		android:id="@+id/tvActualMoney"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignTop="@id/tvFreight"
		android:layout_marginRight="@dimen/shopsdk_default_least_padding"
		android:layout_toLeftOf="@id/tvFreight"
		android:text="￥200"
		android:textColor="@color/orange_price"
		android:textSize="@dimen/shopsdk_default_smaller_txt"/>

	<TextView
		android:id="@+id/tvActualMoneyKey"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignTop="@id/tvActualMoney"
		android:layout_toLeftOf="@id/tvActualMoney"
		android:text="@string/shopsdk_default_actual_pay"
		android:textColor="@color/black"
		android:textSize="@dimen/shopsdk_default_smaller_txt"/>

	<TextView
		android:id="@+id/tvTotalCount"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignTop="@id/tvActualMoney"
		android:layout_marginRight="@dimen/shopsdk_default_small_big_padding"
		android:layout_toLeftOf="@id/tvActualMoneyKey"
		android:text="@string/shopsdk_default_buy_count"
		android:textColor="@color/black"
		android:textSize="@dimen/shopsdk_default_smaller_txt"/>

	<View
		android:id="@+id/line"
		android:layout_width="match_parent"
		android:layout_height="1px"
		android:layout_below="@+id/tvActualMoneyKey"
		android:layout_margin="@dimen/shopsdk_default_common_padding"
		android:background="@color/grey_line"/>

	<LinearLayout
		android:id="@+id/llOrder"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/line"
		android:layout_marginLeft="@dimen/shopsdk_default_big_padding"
		android:layout_marginRight="@dimen/shopsdk_default_big_padding"
		android:gravity="center_vertical"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/tvStatus"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="@string/shopsdk_default_unpay_order"
			android:textColor="@color/orange_price"
			android:textSize="@dimen/shopsdk_default_common_txt"/>
		<com.mob.shop.gui.themes.defaultt.components.OrderActionView
			android:id="@+id/orderActionView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
	</LinearLayout>

	<View
		android:id="@+id/space"
		android:layout_width="match_parent"
		android:layout_height="@dimen/shopsdk_default_common_padding"
		android:layout_below="@+id/llOrder"
		android:layout_marginTop="@dimen/shopsdk_default_common_padding"
		android:background="@color/grey_space"/>

</RelativeLayout>