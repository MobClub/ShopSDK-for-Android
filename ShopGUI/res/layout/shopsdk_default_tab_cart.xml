<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/grey_space"
              android:orientation="vertical">

	<com.mob.shop.gui.themes.defaultt.components.TitleView
		android:id="@+id/titleView"
		android:layout_width="match_parent"
		android:layout_height="@dimen/shopsdk_default_header_height"/>

	<com.mob.tools.gui.PullToRequestView
		android:id="@+id/listView"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:listSelector="#00000000"
		android:cacheColorHint="#00000000"
		android:layout_weight="1"/>

	<View
		android:id="@+id/bLine"
		android:layout_width="match_parent"
		android:layout_height="1px"
		android:visibility="gone"
		android:background="@color/grey_line"/>

	<LinearLayout
		android:id="@+id/llCart"
		android:layout_width="match_parent"
		android:layout_height="45dp"
		android:orientation="horizontal"
		android:visibility="gone"
	    android:background="@color/white"
		>

		<CheckBox
			android:id="@+id/checkBox"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="@dimen/shopsdk_default_common_padding"
			android:button="@drawable/shopsdk_default_checkbox_style"
			android:checked="false"
			android:gravity="center_vertical"
			android:padding="@dimen/shopsdk_default_smaller_padding"/>

		<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:layout_marginLeft="-5dp"
			android:textColor="@color/black"
			android:textSize="@dimen/shopsdk_default_title_txt"
			android:text="@string/shopsdk_default_select_all"/>

		<TextView
			android:id="@+id/tvTotal"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="@dimen/shopsdk_default_biger_padding"
			android:layout_marginRight="@dimen/shopsdk_default_smaller_padding"
			android:textColor="@color/black"
			android:textSize="@dimen/shopsdk_default_common_txt"
			android:text="@string/shopsdk_default_total"/>

		<TextView
			android:id="@+id/tvMoney"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="ï¿¥0"
			android:textSize="@dimen/shopsdk_default_small_big_txt"
			android:textColor="@color/select_tab"/>

		<TextView
			android:id="@+id/tvDelete"
			android:layout_width="130dp"
			android:layout_height="match_parent"
			android:layout_marginLeft="@dimen/shopsdk_default_big_padding"
			android:background="@drawable/shopsdk_default_title_bg"
			android:gravity="center"
			android:paddingLeft="@dimen/shopsdk_default_big_padding"
			android:paddingRight="@dimen/shopsdk_default_big_padding"
			android:visibility="gone"
			android:textColor="@color/white"
			android:text="@string/shopsdk_default_delete"/>

		<TextView
			android:id="@+id/tvSettlement"
			android:layout_width="130dp"
			android:layout_height="match_parent"
			android:layout_marginLeft="@dimen/shopsdk_default_big_padding"
			android:background="@drawable/shopsdk_default_title_bg"
			android:gravity="center"
			android:text="@string/shopsdk_default_goto_settlement"
			android:textColor="@color/white"/>
	</LinearLayout>
</LinearLayout>