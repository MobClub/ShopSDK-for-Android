<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools"
       tools:showIn="@layout/shopsdk_default_tab_allproduct">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.mob.shop.gui.themes.defaultt.components.searchbar.SearchEditText
            android:id="@+id/toolbar_search_edittext"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="56dp"
            android:background="@drawable/shopsdk_default_good_search_bar_bg"
            android:hint="@string/shopsdk_default_search"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:maxLines="1"
            android:layout_marginTop="@dimen/shopsdk_default_small_padding"
            android:layout_marginBottom="@dimen/shopsdk_default_small_padding"
            android:layout_marginLeft="@dimen/shopsdk_default_big_padding"
            android:paddingRight="@dimen/shopsdk_default_small_padding"
            android:textColor="@color/white"
            android:textSize="@dimen/shopsdk_default_small_txt"
            android:textColorHint="#40ffffff"
            android:drawableLeft="@drawable/ic_action_search"
            android:drawableRight="@drawable/shopsdk_default_search_delete"
            android:paddingLeft="@dimen/shopsdk_default_common_padding"/>

        <TextView
            android:id="@+id/cancelPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/shopsdk_default_big_padding"
            android:layout_centerVertical="true"
            android:text="取消"
            android:textSize="@dimen/shopsdk_default_common_txt"
            android:textColor="@color/white"/>
    </RelativeLayout>

</merge>
